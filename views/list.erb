<h2>List of Favorite Places</h2>

<div class="favorite-places">
  <% @list.each do |place| %>
    <p><a href= 'places/<%= place.name%>' ><%= place.name%></a></p>
    <% end %>
</div>

<h4>Add a Place to the list:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="date-visited">Date Visited</label>
    <input id="date-visited" type="text" name="date-visited" class="form-control">
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input id="location" type="text" name="location" class="form-control">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
